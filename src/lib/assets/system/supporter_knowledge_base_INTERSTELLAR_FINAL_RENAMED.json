  "tool_outputs": {
    "text_message": {
      "description": "Short, warm messages ideal for low-pressure support moments like check-ins or reminders.",
      "ideal_for": [
        "gentle check-ins",
        "silent support",
        "follow-up after hard moments"
      ],
      "example": "Hey, just thinking of you. No pressure to reply \u2014 sending care."
    },
    "printable_card": {
      "description": "A short phrase on an image or printable note that can be shared in person or digitally.",
      "ideal_for": [
        "meaningful gestures",
        "gifts",
        "emotional encouragement"
      ],
      "example": "You are not alone. And you don\u2019t have to do it all yourself."
    },
    "voice_note": {
      "description": "Audio-based messages that allow emotion to come through tone of voice.",
      "ideal_for": [
        "emotional empathy",
        "support after intense events"
      ],
      "example": "Just wanted you to hear a real voice saying: you\u2019re doing an amazing job."
    },
    "script_selector": {
      "description": "A tool to help the supporter pick the right type of message for their situation.",
      "ideal_for": [
        "new supporters",
        "unsure what to say",
        "high-anxiety moments"
      ],
      "example": "Would you like to offer help, send encouragement, or check in?"
    }
  },
